<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/primary_dark</item>
        <item name="android:colorPrimaryDark">@color/primary</item>
        <item name="android:colorAccent">@color/bar_color</item>
        <item name="android:divider">#FFFFFF</item>
        <item name="android:navigationBarColor">@color/bar_color</item>
        <item name="android:windowBackground">@color/windows_color</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/primary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:itemTextAppearance">@style/textMenu</item>

    </style>


    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/bar_color</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/bar_color</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ActivityStyle" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/primary_act</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_act</item>
        <item name="android:colorAccent">@color/accent_act</item>
        <item name="android:navigationBarColor">@color/bar_color_act</item>
        <item name="android:windowBackground">@color/windows_color_act</item>
        <item name="android:textColorPrimary">@color/text_color_act</item>
        <item name="android:actionMenuTextColor">@color/primary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:itemTextAppearance">@style/textMenu</item>
    </style>


    <style name="ActivityHelp" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary</item>
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:actionMenuTextColor">@color/primary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:itemTextAppearance">@style/textMenu</item>
    </style>

    <style name="BackGroundImageView">
        <item name="android:alpha">0.8</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ListFont" parent="@android:style/Widget.ListView">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:typeface">sans</item>
        <item name="android:divider">@color/primary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="textMenu" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/primary</item>
    </style>
</resources>
